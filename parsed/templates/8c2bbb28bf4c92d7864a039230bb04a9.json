{
  "components/common/subscription-form": "{{#if theme_settings.show_newsletter_subscribe_intro}}\n    <h3 class=\"newsletter-sub-heading\">{{lang 'newsletter.subscribe_intro'}}</h3>\n{{/if}}\n{{#if theme_settings.footer-newsletter-title '!=' ''}}\n    <h5 class=\"footer-info-heading\">{{theme_settings.footer-newsletter-title}}</h5>\n{{/if}}\n\n{{#if theme_settings.footer-layout '==' 'footer-layout-2'}}\n    {{#if settings.show_newsletter_summary }}\n        <div class=\"footer-newsletter-summary\">{{settings.newsletter_summary}}</div>\n    {{/if}}\n{{/if}}\n\n<form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n    <fieldset class=\"form-fieldset\">\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n        <input type=\"hidden\" name=\"check\" value=\"1\">\n        <div class=\"form-field\">\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n            <div class=\"form-prefixPostfix\">\n                <input class=\"form-input\" id=\"nl_email\" name=\"nl_email\" type=\"email\" value=\"{{customer.email}}\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\n                <button class=\"button button--primary form-prefixPostfix-button--postfix\" type=\"submit\" value=\"\">\n                    <svg class=\"icon\"><use xlink:href=\"#icon-chevron-right\"></use></svg>\n                    <span class=\"text\">{{lang 'newsletter.subscribe_submit'}}</span>\n                </button>\n            </div>\n        </div>\n    </fieldset>\n</form>\n"
}
