{
  "components/themevale/product/ask-an-expert": "<div id=\"ask-an-expert\" class=\"modal\" data-reveal data-title=\"{{product.title}}\" data-url=\"{{product.url}}\">\n   <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\n      <span aria-hidden=\"true\">&#215;</span>\n   </a>\n   {{> components/themevale/product/ask-an-expert-content}}\n</div>\n\n<script type=\"text/javascript\" src=\"https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js\"></script>\n<script>\n$(document).ready(function() {\n\n   $(\"#ask-an-expert-button\").click(function() {\n\n      var ask_proceed = true;\n      //simple validation at client's end\n      //loop through each field and we simply change border color to red for invalid fields\n      $(\"#ask-an-expert #contact_form input[required=true], #ask-an-expert #contact_form textarea[required=true]\").each(function() {\n         if (!$.trim($(this).val())) { //if this field is empty\n            $(this).parent('.form-field').removeClass('form-field--success').addClass('form-field--error');\n            ask_proceed = false; //set do not proceed flag\n         } else {\n            $(this).parent('.form-field').removeClass('form-field--error').addClass('form-field--success');\n         }\n         //check invalid email\n         var email_reg = /^([\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4})?$/;\n         if ($(this).attr(\"name\") == \"customer_email\" && !email_reg.test($.trim($(this).val()))) {\n            $(this).parent('.form-field').removeClass('form-field--success').addClass('form-field--error');\n            ask_proceed = false; //set do not proceed flag\n         }\n      });\n\n      var title = $('#ask-an-expert').data('title');\n      var link = $('#ask-an-expert').data('url');\n\n      if (ask_proceed) //everything looks good! proceed...\n      {\n\n         //get input field values data to be sent to server\n         ask_post_data = {\n            'api': 'i_send_mail',\n            'subject': '{{theme_settings.ask_an_expert_subject}}',\n            'from_name': '{{theme_settings.ask_an_expert_name}}',\n            'email': '{{theme_settings.ask_an_expert_email}}',\n            'email_from': $('#ask-an-expert #contact_form input[name=customer_email]').val(),\n            'message': '<h2 style=\"text-transform:uppercase;color:#000000;\">{{theme_settings.ask_an_expert_subject}}</h2><table>\\\n                  <tr><td><strong>Product Title</strong></td><td>'+ title +'</td></tr>\\\n                  <tr><td><strong>Product Link</strong></td><td><a href=\"' + link +'\">' + link +'</a></td></tr>\\\n                  <tr><td><strong>Your Name</strong></td><td>' + $('#ask-an-expert #contact_form input[name=customer_name]').val() + '</td></tr>\\\n                  <tr><td><strong>Email Address</strong></td><td>' + $('#ask-an-expert #contact_form input[name=customer_email]').val() + '</td></tr>\\\n                  <tr><td><strong>Phone Number</strong></td><td>' + $('#ask-an-expert #contact_form input[name=customer_phone]').val() + '</td></tr>\\\n                  <tr><td><strong>How would you like me to contact you ?</strong></td><td>' + $('#ask-an-expert #contact_form input[name=type_contact]:checked').val() + '</td></tr>\\\n                  <tr><td><strong>Do you need</strong></td><td>' + $('#ask-an-expert #contact_form input[name=type_package]:checked').val() + '</td></tr>\\\n                  <tr><td><strong>What can i help you with today ?</strong></td><td>' + $('#ask-an-expert #contact_form textarea[name=message]').val() + '</td></tr>\\\n               </table>'\n         };\n\n         //Ajax post data to server\n         $.post('https://themevale.net/tools/sendmail/ask-an-expert/', ask_post_data, function(response) {\n            if (response.type == 'error') { //load json data from server and output message\n               output = '<div class=\"error\">' + response.text + '</div>';\n            } else {\n               output = '<div class=\"alert alert-success\">Thank you. We\\'ve received your feedback and will respond shortly.</div>';\n               //reset values in all input fields\n               $(\"#ask-an-expert #contact_form  input[required=true], #ask-an-expert #contact_form textarea[required=true]\").val('');\n               $(\".form-inner\").hide(); //hide form after success\n            }\n            $(\"#ask-an-expert #contact_results\").hide().html(output).show();\n         }, 'json');\n      }\n   });\n\n   //reset previously set border colors and hide all message on .keyup()\n   $(\"#ask-an-expert #contact_form input[required=true], #ask-an-expert #contact_form textarea[required=true]\").keyup(function() {\n      if (!$.trim($(this).val())) { //if this field is empty\n         $(this).parent('.form-field').removeClass('form-field--success').addClass('form-field--error');\n         ask_proceed = false; //set do not proceed flag\n      } else {\n         $(this).parent('.form-field').removeClass('form-field--error').addClass('form-field--success');\n      }\n      //check invalid email\n      var email_reg = /^([\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4})?$/;\n      if ($(this).attr(\"name\") == \"customer_email\" && !email_reg.test($.trim($(this).val()))) {\n         $(this).parent('.form-field').removeClass('form-field--success').addClass('form-field--error');\n         ask_proceed = false; //set do not proceed flag\n      }\n      $(\"#ask-an-expert #contact_results\").hide();\n   });\n});\n</script>\n",
  "components/themevale/product/ask-an-expert-content": "<div class=\"modal-content\">\n   <div class=\"modal-header\">\n      <h2 class=\"modal-header-title\">Haben Sie eine Frage?</h2>\n   </div>\n   <div class=\"logo\">\n      <a href=\"/\">\n         <img class=\"lazyload\" data-src=\"/images/stencil/491x116/logo_green_1610551752__35233.original.png\" alt=\"{{settings.store_logo.title}}\" title=\"{{settings.store_logo.title}}\" width=\"100\">\n      </a>\n   </div>\n   <div class=\"modal-body\">\n      <div id=\"contact_results\"></div>\n      <div class=\"form-inner\">\n         <div class=\"title-wrapper\">\n             <h4 class=\"title\">Senden Sie Ihre Frage direkt an den ofinto Experten</h4>\n             <div class=\"description\">Wir antworten Ihnen innerhalb von 24 Stunden.</div>\n             <div class=\"questions\">Bitte füllen Sie den folgenden Fragebogen aus:</div>\n         </div>\n         \n         <form class=\"form\" id=\"contact_form\">\n            <fieldset class=\"form-fieldset\">\n               <div class=\"form-field\">\n                  <label class=\"form-label\">Name, Vorname</label>\n                  <input required=\"true\" type=\"text\" class=\"form-input\" name=\"customer_name\" value=\"{{customer.name}}\">\n               </div>\n               <div class=\"form-field\">\n                  <label class=\"form-label\">E-Mail-Adresse</label>\n                  <input required=\"true\" type=\"text\" class=\"form-input\" name=\"customer_email\" value=\"{{customer.email}}\">\n               </div>\n               <div class=\"form-field\">\n                  <label class=\"form-label\">Telefon-Nummer</label>\n                  <input required=\"true\" type=\"text\" class=\"form-input\" name=\"customer_phone\" value=\"{{customer.phone}}\">\n               </div>\n               <div class=\"form-field form-field-1 form-field-radio\">\n                  <label class=\"form-label\">Thema:</label>\n                  <input class=\"form-radio\" id=\"pricing-radio\" type=\"radio\" name=\"type_package\" checked value=\"Pricing\">\n                  <label class=\"form-label\" for=\"pricing-radio\">Preise</label>\n                  <input class=\"form-radio\" id=\"answers-radio\" type=\"radio\" name=\"type_package\" value=\"Answers\">\n                  <label class=\"form-label\" for=\"answers-radio\">Produkt</label>\n                  <input class=\"form-radio\" id=\"both-radio\" type=\"radio\" name=\"type_package\" value=\"Pricing & Answers\">\n                  <label class=\"form-label\" for=\"both-radio\">Anderes</label>\n               </div>\n               <div class=\"form-field\">\n                  <label class=\"form-label\" for=\"comment-area\">Wie können wir Ihnen helfen?</label>\n                  <textarea name=\"message\" cols=\"30\" rows=\"6\" class=\"form-input\" id=\"comment-area\" required=\"true\"></textarea>\n               </div>\n               <div class=\"form-field\">\n                  <label class=\"form-label label-last\">Wie sollen wir Sie kontaktieren?</label>\n                  <input class=\"form-radio\" id=\"phone-radio\" type=\"radio\" name=\"type_contact\" checked value=\"Phone\">\n                  <label class=\"form-label\" for=\"phone-radio\">Telefon</label>\n                  <input class=\"form-radio\" id=\"email-radio\" type=\"radio\" name=\"type_contact\" value=\"Email\">\n                  <label class=\"form-label\" for=\"email-radio\">E-Mail</label>\n                  <input class=\"form-radio\" id=\"both-radio-2\" type=\"radio\" name=\"type_contact\" value=\"Phone & Email\">\n                  <label class=\"form-label\" for=\"both-radio-2\">Beides</label>\n               </div>\n               <div class=\"form-actions\">\n                 <button type=\"button\" class=\"button button--primary button--large\" id=\"ask-an-expert-button\">Anfrage absenden</button>\n               </div>\n            </fieldset>\n         </form>\n      </div>\n   </div>\n</div>\n"
}